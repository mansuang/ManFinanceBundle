{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Address</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Address_type</th>
                <td>{{ entity.addresstype }}</td>
            </tr>
            <tr>
                <th>Line_1</th>
                <td>{{ entity.line1 }}</td>
            </tr>
            <tr>
                <th>Mooban</th>
                <td>{{ entity.mooban }}</td>
            </tr>
            <tr>
                <th>Tambol</th>
                <td>{{ entity.tambol }}</td>
            </tr>
            <tr>
                <th>Ampher</th>
                <td>{{ entity.ampher }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ entity.province }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ entity.postcode }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('finance_address') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('finance_address_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
