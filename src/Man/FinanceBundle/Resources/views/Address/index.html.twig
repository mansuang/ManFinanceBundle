{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Address list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Address_type</th>
                <th>Line_1</th>
                <th>Mooban</th>
                <th>Tambol</th>
                <th>Ampher</th>
                <th>Province</th>
                <th>Postcode</th>
                <th>Phone</th>
                <th>Created_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('finance_address_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.addresstype }}</td>
                <td>{{ entity.line1 }}</td>
                <td>{{ entity.mooban }}</td>
                <td>{{ entity.tambol }}</td>
                <td>{{ entity.ampher }}</td>
                <td>{{ entity.province }}</td>
                <td>{{ entity.postcode }}</td>
                <td>{{ entity.phone }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('finance_address_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('finance_address_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('finance_address_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
